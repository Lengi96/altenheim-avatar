{
  "name": "anni-platform",
  "description": "Monorepo for the Anni platform (server, web app, and shared packages).",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lengi96/altenheim-avatar.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=apps/server",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "db:generate": "npm run db:generate --workspace=apps/server",
    "db:migrate": "npm run db:migrate --workspace=apps/server",
    "db:seed": "npm run db:seed --workspace=apps/server"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
